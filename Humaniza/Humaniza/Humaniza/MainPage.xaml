<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Humaniza"
             x:Class="Humaniza.MainPage">

    <StackLayout Margin="20" VerticalOptions="Center">
        <Image HeightRequest="200" Source="Icon.png"></Image>

        <Label Text="Email" TextColor="#9900ff" ></Label>

        <Entry x:Name="Email"></Entry>

        <Label Text="Senha" TextColor="#9900ff" ></Label>

        <Entry x:Name="Senha" ></Entry>

        <Button x:Name="login" Text="login"  BackgroundColor="#9900ff" IsEnabled="false" Clicked="OnCall" ></Button>

        <Button x:Name="Cadastrar" Text="cadastrar" BackgroundColor="#9900ff"></Button>
    </StackLayout>

</ContentPage>